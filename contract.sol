contract HerosStaking is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public herosToken;
    IERC20 public rewardToken;

    uint256 public totalStaked;
    uint256 public rewardRate;
    uint256 public constant APY = 3600; // Set APY to 3600%

    struct Stake {
        uint256 amount;
        uint256 rewardDebt;
        uint256 lastRewardTime;
    }

    struct Package {
        uint256 lockupDuration;
        uint256 bonusPercentage;
    }

    mapping(address => Stake) public stakes;
    mapping(uint256 => Package) public packages;

    uint256 public totalRewardDebt;
    uint256 public rewardPerTokenStored;
    uint256 public lastUpdateTime;
    uint256 public totalRewards;

    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(address indexed user, uint256 reward);
    event PackageAdded(uint256 indexed packageId, uint256 lockupDuration, uint256 bonusPercentage);

    constructor(IERC20 _herosToken, IERC20 _rewardToken) {
        herosToken = _herosToken;
        rewardToken = _rewardToken;
        rewardRate = APY.div(100);
    }

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken();
        lastUpdateTime = block.timestamp;
        if (account != address(0)) {
            stakes[account].rewardDebt = earned(account);
            stakes[account].lastRewardTime = block.timestamp;
        }
        _;
    }

    function addPackage(uint256 packageId, uint256 lockupDuration, uint256 bonusPercentage) external onlyOwner {
        packages[packageId] = Package({
            lockupDuration: lockupDuration,
            bonusPercentage: bonusPercentage
        });

        emit PackageAdded(packageId, lockupDuration, bonusPercentage);
    }

    function stake(uint256 amount, uint256 packageId) external updateReward(msg.sender) {
        require(amount > 0, "Cannot stake 0");
        require(packages[packageId].lockupDuration > 0, "Invalid package");

        herosToken.safeTransferFrom(msg.sender, address(this), amount);

        stakes[msg.sender].amount = stakes[msg.sender].amount.add(amount);
        stakes[msg.sender].lastRewardTime = block.timestamp;
        totalStaked = totalStaked.add(amount);

        emit Staked(msg.sender, amount);
    }

    function withdraw(uint256 amount) external updateReward(msg.sender) {
        require(amount > 0, "Cannot withdraw 0");
        require(stakes[msg.sender].amount >= amount, "Withdraw amount exceeds balance");

        uint256 lockupDuration = packages[getPackageId(msg.sender)].lockupDuration;
        require(block.timestamp >= stakes[msg.sender].lastRewardTime + lockupDuration, "Tokens are still locked");

        stakes[msg.sender].amount = stakes[msg.sender].amount.sub(amount);
        herosToken.safeTransfer(msg.sender, amount);
        totalStaked = totalStaked.sub(amount);

        emit Withdrawn(msg.sender, amount);
    }

    function claimReward() external updateReward(msg.sender) {
        uint256 reward = earned(msg.sender);
        if (reward > 0) {
            rewardToken.safeTransfer(msg.sender, reward);
            totalRewards = totalRewards.sub(reward);
            stakes[msg.sender].rewardDebt = 0;

            emit RewardPaid(msg.sender, reward);
        }
    }

    function earned(address account) public view returns (uint256) {
        uint256 stakedAmount = stakes[account].amount;
        uint256 duration = block.timestamp.sub(stakes[account].lastRewardTime);
        uint256 reward = stakedAmount.mul(rewardRate).mul(duration).div(365 days).div(100);
        return reward.add(stakes[account].rewardDebt);
    }

    function rewardPerToken() public view returns (uint256) {
        if (totalStaked == 0) {
            return rewardPerTokenStored;
        }
        return rewardPerTokenStored.add(
            block.timestamp.sub(lastUpdateTime).mul(rewardRate).mul(1e18).div(totalStaked)
        );
    }

    function getPackageId(address account) public view returns (uint256) {
